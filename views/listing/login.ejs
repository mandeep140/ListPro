<% layout("/layout/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-8 offset-2">
        <h2>Login in ListPro</h2>
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lable">username</label>
                <input type="text" name="username" id="username" placeholder="Enter Username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input type="password" name="password" id="password" placeholder="Enter password" class="form-control" required>
            </div>
            <button class="btn btn-dark mt-3">Login Now</button>
        </form>
        <form action="/signup" method="get" class="mt-5">
            <h6>Don't have a account?</h6>
            <button class="btn btn-dark btn-sm mt-2">Sign-Up Now!</button>
        </form>
    </div>
</div>